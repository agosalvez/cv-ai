---
import Layout from '../layouts/Layout.astro';

const projects = [
	{
		title: "Enterprise Resource Planning System",
		description: "Led the development of a comprehensive ERP system for a multinational corporation, improving operational efficiency by 30%.",
		technologies: ["Java", "Spring Boot", "React", "PostgreSQL"]
	},
	{
		title: "E-commerce Platform Overhaul",
		description: "Spearheaded the redesign and optimization of a high-traffic e-commerce platform, resulting in a 50% increase in conversion rates.",
		technologies: ["Node.js", "Express", "Vue.js", "MongoDB"]
	},
	{
		title: "IoT Device Management Solution",
		description: "Architected and implemented a scalable IoT device management system capable of handling millions of connected devices in real-time.",
		technologies: ["Python", "Django", "MQTT", "InfluxDB"]
	}
];
---

<Layout title="Projects - Adrián Gosálvez">
	<h1>My Projects</h1>
	<p class="intro">Here are some of the key projects I've led and contributed to throughout my career:</p>
	<div class="project-grid">
		{projects.map((project) => (
			<div class="project-card">
				<h2>{project.title}</h2>
				<p>{project.description}</p>
				<div class="technologies">
					{project.technologies.map((tech) => (
						<span class="tech-tag">{tech}</span>
					))}
				</div>
			</div>
		))}
	</div>
</Layout>

<style>
	.intro {
		max-width: 800px;
		margin: 0 auto 2rem;
		text-align: center;
	}
	.project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}
	.project-card {
		background-color: #fff;
		border-radius: 10px;
		padding: 1.5rem;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
		transition: transform 0.3s ease;
	}
	.project-card:hover {
		transform: translateY(-5px);
	}
	.technologies {
		margin-top: 1rem;
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}
	.tech-tag {
		background-color: rgb(var(--accent-light));
		color: rgb(var(--accent-dark));
		padding: 0.2rem 0.5rem;
		border-radius: 15px;
		font-size: 0.8rem;
	}
</style>